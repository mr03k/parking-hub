# Need to package the code first `tar zcf farin.tar.gz $(ls)` and move it to the same directory as Dokerfile

# Compile the go code, you can specify the golang version
FROM golang:1.21-alpine as build
COPY . /go/src/farin
WORKDIR /go/src/farin
RUN tar zxf farin.tar.gz
RUN go env -w GOPROXY=https://goproxy.cn,direct
RUN go mod download
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build -o /farin cmd/farin/main.go

# compressing binary files
#cd /
#upx -9 farin


# building images with binary
FROM alpine:latest
MAINTAINER zhufuyi "g.zhufuyi@gmail.com"

# set the time zone to Shanghai
RUN apk add tzdata  \
    && cp /usr/share/zoneinfo/Asia/Shanghai /etc/localtime \
    && echo "Asia/Shanghai" > /etc/timezone \
    && apk del tzdata

# add curl, used for http service checking, can be installed without it if deployed in k8s
RUN apk add curl

COPY --from=build /farin /app/farin
COPY --from=build /go/src/farin/configs/farin.yml /app/configs/farin.yml

# http port
EXPOSE 8080


WORKDIR /app

CMD ["./farin", "-c", "configs/farin.yml"]
# if you use the Configuration Center, farin.yml is changed to the Configuration Center configuration.
#CMD ["./farin", "-c", "configs/farin.yml", "-enable-cc"]
